{
  "name": "@solfege/cli",
  "description": "Command Line Interface of SolfegeJS",
  "version": "5.0.0",
  "publishConfig": {
    "access": "public"
  },
  "author": "neolao <contact@neolao.com>",
  "repository": "https://github.com/solfegejs/cli.git",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "main": "lib/Bundle.js",
  "engines": {
    "node": ">= 10"
  },
  "peerDependencies": {
    "@solfege/application": "^4.0.1"
  },
  "dependencies": {
    "colors": "^1.1",
    "commander": "^2.20.0",
    "minimist": "^1.2"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-node": "^7.0.1",
    "jest": "^23.4.2",
    "watch": "^1.0.2"
  },
  "scripts": {
    "lint": "eslint --format=node_modules/eslint-formatter-pretty lib",
    "test": "jest",
    "watch": "watch 'echo \"\\033[41;37m      LINT      \\033[0m\"; npm run --silent lint' ./lib",
    "prepublishOnly": "npm run lint && npm test"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "indent": [
        "error",
        2
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "verbose": true,
    "testURL": "http://localhost/"
  }
}
